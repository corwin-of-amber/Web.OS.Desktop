{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "lib": ["es2022", "dom", "dom.iterable", "webworker"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true
  },
  "exclude": ["build", "dist"]
}
